{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./public",
    "lib": ["es6"],
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "isolatedModules": false,
    "strict": true
  },
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "include": ["src/*.ts", "src/**/*.ts", "src/**/*.js"]
}
