{
  "name": "coran",
  "version": "0.0.0",
  "description": "Coran App Multidevice",
  "repository": "https://github.com/ymeskini/coran.git",
  "private": true,
  "scripts": {
    "lint": "lerna run lint",
    "format": "lerna run format",
    "tsc": "lerna run tsc",
    "dev:web": "yarn workspace @coran/web dev",
    "dev:api": "yarn workspace @coran/api dev",
    "dev:mobile": "yarn workspace @coran/mobile start",
    "dev:android": "yarn workspace @coran/mobile android",
    "dev:ios": "yarn workspace @coran/mobile ios",
    "diff": "lerna diff",
    "deploy:web": "yarn workspace @coran/web deploy"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.10.0",
    "@typescript-eslint/parser": "2.10.0",
    "eslint": "6.7.2",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "lerna": "3.19.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "typescript": "3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
